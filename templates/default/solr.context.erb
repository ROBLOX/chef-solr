<?xml version="1.0"  encoding="ISO-8859-1"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">

<Configure class="org.eclipse.jetty.webapp.WebAppContext">

  <Set name="contextPath"><SystemProperty name="hostContext" default=<%= node['solr']['context_path'] %>"/></Set>
  <Set name="war"><SystemProperty name="jetty.home"/>/webapps/<%= node['solr']['war'] %></Set>
  <Set name="defaultsDescriptor"><SystemProperty name="jetty.home"/>/etc/webdefault.xml</Set>
  <Set name="tempDirectory"><Property name="jetty.home" default="."/>/webapps/solr/temp</Set>

  <Call class="java.lang.System" name="setProperty">
    <Arg>solr.solr.home</Arg>
    <Arg><%= node['solr']['config_dir'] %></Arg>
  </Call>

  <Call class="java.lang.System" name="setProperty">
    <Arg>solr.data.dir</Arg>
    <Arg><%= node['solr']['data'] %></Arg>
  </Call>

</Configure>
